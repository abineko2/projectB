
<%=provide(:title,"ログイン") %>
<div class="main_title">
     <h1>Log in</h1>
</div>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
       
        <%=form_for(:session,url:login_path) do |form| %>
        
           
           <%=form.label "メールアドレス" %>
           <%=form.email_field :email,class:"form-control" %>
           
           
           <%=form.label "パスワード" %>
           <%=form.password_field :password,class:"form-control" %><br>
           
          
           <%=form.check_box :check %>
            <%=form.label "パスワード記録しますか？" %>
           
           <div style="text-align:center;">
               <%=form.submit "ログイン",class:"btn btn-primary btn-block" %>
               <div>新規ユーザーですか?<%=link_to "アカウント登録はこちら",new_user_path %></div>
           </div>
           
           
        <% end %>
    </div>
    
</div>