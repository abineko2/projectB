
<div style="text-align:center">
    <h1>拠点一覧</h1><br>
    <%=provide(:title,"拠点情報修正") %>
    <table class="table table-bordered table-striped" id="baseInfo-table">
        <thead>
            <tr>
            <th></th><th></th><th>拠点番号</th><th>拠点名</th><th>勤怠情報</th>
            </tr>
        </thead>
        <tbody class="product-index">
        <% @bases.each do |base| %>
              <tr>
            <td style="text-align:left;margin:0;padding:0; padding-top:8px;"> 
            　　 <%=link_to "修正",edit_basis_path(base),remote:true,class:"btn btn-primary",id:"baseInfo_bt" %>
            </td>
            <td><%=link_to "削除","/bases/#{base.id}",class:"btn btn-primary",method: :delete,data:{confirm:"削除しますか？"} %></td>
            <td><%=base.basename %></td>
            <td><%=base.baseno %></td>
            <td><%=base.attend %></td>
        </tr>
        <% end %>
       </tbody>
    </table>
    <div id="baseInfo-add">
        <button class="btn btn-primary modalOpen" id="baseInfo_bt2">拠点情報追加</button>
        <br>
        <div id="base-form">
            <%=render 'form2' %>
        </div>
    </div>
 </div>
 <div id="user-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>

<style>
    body {
  position:relative;
}
 

    #baseInfo-table{
       width:70%;
       margin-left:15%;
       margin-bottom:50px;
       
   }
   #baseInfo-add{
        width:70%;
        height:80px;
        background-color:#e0e0e0;
        margin-left:15%;
        border-radius:6px;
        text-align:left;
   }
   #baseInfo_bt{
       
        width:150px;
        padding:4px;
        
    }
    #baseInfo_bt2{
        margin-top:12px;
        margin-left:10px;
        width:250px;
        padding:18px;
        padding-left:4px;
        
    }
    #base-form{
        display:none;
        margin-top:20px;
        text-align:center;
    }
</style>
<script>
  $("#baseInfo_bt2").click(function(){
        $("#base-form").slideToggle();
 
	});
</script>