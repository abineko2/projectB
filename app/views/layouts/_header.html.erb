<div class="header_left" style="margin-right:40px;">
    <ul style="list_style:none;margin:0;padding:0;">
        <li style="display:inline-block;"><h1>勤怠システム</h1></li>&emsp;
        <% if current_user.present? && current_user.admin? %>
           <li style="color:red;font-weight:bold;;display:inline-block;"><%=current_user.name if current_user.present? %></li>
        <% elsif current_user.present? && current_user.superior? %>
            <li style="color:green;font-weight:bold;display:inline-block;"><%=current_user.name if current_user.present? %></li>
        <% else %>
             <li style="color:white;font-weight:bold;display:inline-block;"><%=current_user.name if current_user.present?  %></li>
        <% end %>
    </ul>
   
    <h4 style="color:yellow;">&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;植松　勇貴</h4>
</div>
<nav class="nav">
        <div id="right-left">
            <ul>
                <li><%=link_to "トップへ",root_path %></li>
                <% if login? %>
                    <% if current_user.admin? %>
                         <li><%=link_to "ユーザー一覧",users_path %></li>
                         <li><%=link_to "出勤社員一覧",goToWork_path %></li>
                         <li><%=link_to "拠点情報の修正",bases_path %></li>
                         <li><%=link_to "基本情報修正",basic_info_path(current_user) %></li>
                    <% end %>
                <% end %>
            </ul>
            
        </div>
        <div id="right-right">
            <% if login? %>
              <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="color:#fff;text-decoration:none;">
                      アカウント<b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                      <li><%=link_to "#{current_user.name}さん勤怠表示",current_user unless current_user.admin? %></li>
                      <li><%=link_to "#{current_user.name}さん設定",edit_user_path(current_user) %></li>
                      <li class="divider"></li>
                      <li><%=link_to "ログアウト",logout_path,method: :delete %></li>
                  </ul>
              </li>
            <% else %>
              <%=link_to "ログイン",login_path %>
            <% end %>
        </div>
        <div id="right-empty"></div>
</nav>
<div class="empty">
    
</div>