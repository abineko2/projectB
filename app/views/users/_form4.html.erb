<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
            </button>
        </div>
         <div class="modal-body">
             <div style="text-align:center">
                   <h3>[残業申請]</h3>
                   <%=form_for(@send2,url:over_time_new_path) do |f| %>
                   <table class="table table-bordered table-condensed table-striped">
                       <thread>
                           <tr>
                               <th>日付</th>
                               <th>曜日</th>
                               <th>終了予定時間</th>
                               <th>事務処理内容</th>
                               <th>指示者確認㊞</th>
                           </tr>
                       </thread>
                       <tbody>
                           <tr>
                               <td><%=@date %></td>
                               <td><%=@day %></td>
                                <%=f.hidden_field :worked_on,value:@worked_on %>
                                <%=f.hidden_field :time,value:@date %>
                               <td><%=f.time_field :new_finish,class:"form-control" %></td>
                               <td><%=f.text_field :note,class:"form-control" %></td>
                               <td><%=f.select :sperior,supeiors,{},class:"form-control" %></td>
                           </tr>
                       </tbody>
                   </table>
                   <%=f.submit "変更を送信する",class:"btn btn-primary btn-block" %>
                   <% end %>
             </div>
           
         </div>
     
    </div>
</div>