<%=render 'layouts/error' %>

<div class="row">
    <div class="col-md-12">
       
        <%=form_for(@user,url:update2_path(@user),method: :patch) do |form| %>
        
           <%=form.label "名前" %>
           <%=form.text_field :name,class:"form-control" %>
           
           <%=form.label "メールアドレス" %>
           <%=form.email_field :email,class:"form-control" %>
           
           <%=form.label "所属" %>
           <%=form.text_field :affiliation,class:"form-control" %>
           
           <%=form.label "社員番号" %>
           <%=form.number_field :employee_number,class:"form-control" %>
           
           <%=form.label "カードID" %>
           <%=form.text_field :uid,class:"form-control" %>
           
           
           <%=form.label "パスワード" %>
           <%=form.password_field :password,class:"form-control" %>
           
           
           <%=form.label "指定勤務開始時間" %>
           <%=form.time_field :designated_work_start_time,class:"form-control" %>
           
           <%=form.label "基本勤務時間" %>
           <%=form.time_field :basic_work_time,class:"form-control" %><br>
           
           <%=form.label "指定勤務終了時間" %>
           <%=form.time_field :designated_work_end_time,class:"form-control" %>
           
           <div style="text-align:center;">
               <%=form.submit yield(:button),class:"btn btn-primary btn-block" %>
           </div>
           
           
        <% end %>
    </div>
    
</div>