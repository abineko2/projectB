
<%=provide(:title,"基本情報編集") %>
<div class="main_title">
     <h1>基本情報の更新</h1>
</div>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
       
        <%=form_for(@user,url:updateBasicInfo_path(params:{id:@user.id}),method: :patch) do |form| %>
        
           
           <%=form.label "指定勤務時間" %>
           <%=form.time_field :basic_time,class:"form-control" %>
           
           
           <%=form.label "基本勤務時間" %>
           <%=form.time_field :appoint_time,class:"form-control" %><br>
           
           
           <div style="text-align:center;">
               <%=form.submit "編集",class:"btn btn-primary btn-block" %>
           </div>
           
           
        <% end %>
    </div>
    
</div>